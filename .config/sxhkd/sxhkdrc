super + u
        record_stop
super + i
        record_start
super + o
        record_replay_start
super + p
        record_replay_save

super + r
        dmenu_run -F -i -c -l 20

super + a
        lmc previous
super + s
        lmc playpause
super + d
        lmc next
super + c
        lmc loop
super + x
        lmc shuffle
super + f
        $TERMINAL -e $FILE

super + b
        $BROWSER
super + m
        thunderbird

super + bracketright
        lmc mute_toggle
super + backslash
        lmc deaf_toggle

super + shift + l
        keymap_toggle

super + shift + r
        pkill -usr1 -x sxhkd ; notify-send -u low 'SXHKD' 'Reloaded config'

super + Return
        $TERMINAL

Print
        screenshot_menu

super + shift + space
        dunstctl close-all

super + F5
        monitor_toggle
super + F6
        touchpad_toggle
super + F7
        mount_menu
super + F8
        umount_menu
super + F9
        sudo -A systemctl restart NetworkManager ; notify-send -u low 'Network' 'Restartet NM'
super + F10
        prompt "Lock computer?" "slock"
super + F11
        prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + F12
        prompt "Reboot computer?" "sudo -A reboot now"

XF86AudioMute
        lmc deaf_toggle
XF86AudioMicMute
        lmc mute_toggle
XF86AudioLowerVolume
        lmc down
XF86AudioRaiseVolume
        lmc up
XF86MonBrightnessDown
        light -U 15
XF86MonBrightnessUp
        light -A 15
